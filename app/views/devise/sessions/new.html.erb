<% provide :web_title,"登入" %>

<div class="container" style="margin-top: 70px;">
  <div class="card">
    <div class="card-body">
      <h2>登入</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "登入",class: "btn btn-block btn-success" %>
        </div>
      <% end %>
      <div id="socialmedia">
        <h4>社群登入</h4>
        <a href="<%= user_google_oauth2_omniauth_authorize_url %>" class="btn btn-danger btn-block"><i class="fab fa-google fa-fw"></i>Google</a>
      </div>
    </div>
  </div>
</div>
